<MainScreen>:
    name: 'main'
    egg: egg
    egt: egt
    lma: lma
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'This is America'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()

    DPEAButton:
        id: egg
        size: 250, 100
        center_x: root.width * 0.1
        center_y: root.height * 0.3

        color: 0.035, 0.152, 0.725, 1
        text: "On"



        on_press: root.changeText()
    DPEAButton:
        id: egt
        size: 250, 100
        center_x: root.width * 0.1
        center_y: root.height * 0.5

        color: 0.035, 0.152, 0.725, 1
        text: "0"



        on_press: root.counterButton()




    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()
    Label:
        id: lma
        text: "Motor on"
        font_size: 30
        x: root.width * .2
        y: root.height * .2
        color: 0, 0, 0, 1
    DPEAButton:
        size: 250, 100
        x: root.width * 0.2
        y: root.height * 0.1

        color: 0.035, 0.152, 0.725, 1
        text: "Motor Controller"



        on_press: root.Motor()
